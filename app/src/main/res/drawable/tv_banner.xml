<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="320dp" android:height="180dp" />
            <solid android:color="#202940" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="300dp" android:height="160dp" />
            <solid android:color="#2F3B59" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#4A5A80" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="220dp" android:height="80dp" />
            <solid android:color="#3C4C70" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="180dp" android:height="6dp" />
            <solid android:color="#5C7CDE" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>
